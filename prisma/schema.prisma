generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Courses {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  category    String
  description String
  learn       String[]
  required    String[]
  title       String
  duration    String
  price       Int
}

model Description {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  heading String
  content String[]
  Blogs   Blogs?   @relation(fields: [blogsId], references: [id])
  blogsId String  @db.ObjectId
}

model Blogs {
  id              String        @id @default(auto()) @map("_id") @db.ObjectId
  date            DateTime      @default(now())
  category        String
  title           String
  cover_photo_url String
  description     Description[]
  conclusion      String
  author_name     String
}
